<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capitalism.thenewboston"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.capitalism.thenewboston.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.capitalism.thenewboston.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.capitalism.thenewboston.STARTINGPOINT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.capitalism.thenewboston.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.capitalism.thenewboston.Menu" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.capitalism.thenewboston.TextPlay"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.capitalism.thenewboston.ChessClock"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.capitalism.thenewboston.ChessClock" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".AboutUs"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <intent-filter>
                <action android:name="com.capitalism.thenewboston.ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".Preferences">
            <intent-filter>
                <action android:name="com.capitalism.thenewboston.PREFERENCES"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
    </application>
</manifest>